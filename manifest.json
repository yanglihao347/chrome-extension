{
  "manifest_version": 2,
  "name": "语雀-速记",
  "description": "快速保存文档至语雀",
  "version": "1.0.0",
  "icons": {
    "16": "icons/icon-16.png",
    "48": "icons/icon-16.png",
    "128": "icons/icon-16.png"
  },
  "background": {
    "scripts": ["js/background.js"]
  },
  "permissions": [
    "contextMenus",
    "storage",
    "tabs",
    "https://www.yuque.com/*"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "css": ["css/content.css"],
      "js": ["js/content.js"],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    "images/left-arrow.png",
    "images/right-arrow.png",
    "images/add.png",
    "images/edit.png",
    "images/delete.png",
    "images/setting.png",
    "images/close.png",
    "images/loading.png",
    "images/clear.png",
    "images/upload.png",
    "images/view.png",
    "images/yuque.png"
  ]
}