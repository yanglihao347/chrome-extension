{
  "manifest_version": 2,
  "name": "谷歌扩展插件demo",
  "description": "我是一个描述123",
  "version": "1.0.0",
  "icons": {
    "16": "icons/icon-128.png",
    "48": "icons/icon-128.png",
    "128": "icons/icon-128.png"
  },
  "background": {
    "scripts": ["js/background.js"]
  },
  "permissions": [
    "contextMenus",
    "storage",
    "tabs",
    "https://www.yuque.com/*"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "css": ["css/content.css"],
      "js": ["js/content.js"],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    "images/left-arrow.png",
    "images/right-arrow.png",
    "images/add.png",
    "images/edit.png",
    "images/delete.png",
    "images/yuque.png"
  ]
}